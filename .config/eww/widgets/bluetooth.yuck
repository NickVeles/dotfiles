;; Bluetooth
(
  defvar bluetoothName
  "Not connected"
)

(
  defvar bluetoothIcon
  "error"
)

(
  defvar bluetoothEnabled
  false
)

(
  defwidget bluetooth [] (
    button
    :class "container"
    :visible bluetoothEnabled
    :tooltip "${bluetoothName}"
    :onclick `hyprctl dispatch exec [floating] blueman-manager`
    (
      image
      :width 20
      :path "icons/${bluetoothIcon}.svg"
      :image-width 16
    )
  )
)