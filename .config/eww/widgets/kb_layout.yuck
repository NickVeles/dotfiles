;; Keyboard Layout
(
  defvar keyboard
  "US"
)

(
  defwidget kbLayout [] (
    eventbox
    :cursor "pointer"
    :class "container"
    :onclick `scripts/toggleKeyboard.sh`
    (
      box
      :class "spacer"
      :spacing 5
      :space-evenly false
      (
        image
        :path "icons/keyboard.svg"
        :image-width 18
      )
      (
        label
        :text keyboard
      )
    )
  )
)