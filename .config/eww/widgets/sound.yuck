;; Sound
(
  defvar micIcon
  "error"
)

(
  defvar outIcon
  "error"
)

(
  defvar micVolume
  "ERR%" ; initial value
)

(
  defvar outVolume
  "ERR%" ; initial value
)

(
  defwidget sound [] (
    box
    :class "border"
    (
      box
      :class "container"
      :space-evenly false
      :spacing 5

      ; Output
      (
        box
        :class "spacer"
        :space-evenly false
        :spacing 5
        (
          image
          :path "icons/${outIcon}.svg"
          :image-width 18
        )
        (
          label
          :text outVolume
        )
      )

      ; Mic
      (
        box
        :class "spacer"
        :space-evenly false
        :spacing 5
        (
          image
          :path "icons/${micIcon}.svg"
          :image-width 18
        )
        (
          label
          :text micVolume
        )
      )
    )
  )
)